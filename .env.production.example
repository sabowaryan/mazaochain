# Production Environment Configuration for MazaoChain MVP

# Supabase Configuration (Production)
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_role_key

# Hedera Configuration (Mainnet)
NEXT_PUBLIC_HEDERA_NETWORK=mainnet
NEXT_PUBLIC_HEDERA_ACCOUNT_ID=0.0.YOUR_MAINNET_ACCOUNT_ID
HEDERA_PRIVATE_KEY=your_mainnet_private_key
HEDERA_OPERATOR_ID=0.0.YOUR_OPERATOR_ACCOUNT_ID
HEDERA_OPERATOR_KEY=your_operator_private_key

# Hedera Mainnet Configuration
HEDERA_MAINNET_ENDPOINT=https://mainnet-public.mirrornode.hedera.com
HEDERA_CONSENSUS_NODE_ENDPOINT=35.237.200.180:50211
HEDERA_MIRROR_NODE_ENDPOINT=https://mainnet-public.mirrornode.hedera.com

# Token Configuration (Mainnet)
HEDERA_TOKEN_TREASURY_ID=0.0.YOUR_TREASURY_ACCOUNT_ID
HEDERA_TOKEN_TREASURY_KEY=your_treasury_private_key
HEDERA_TOKEN_ADMIN_KEY=your_token_admin_private_key
HEDERA_TOKEN_SUPPLY_KEY=your_token_supply_private_key

# HashPack Configuration (Production)
NEXT_PUBLIC_HASHPACK_APP_NAME=MazaoChain
NEXT_PUBLIC_HASHPACK_APP_DESCRIPTION=Decentralized lending platform for farmers in DRC
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_production_walletconnect_project_id

# Application Configuration (Production)
NEXT_PUBLIC_APP_URL=https://mazaochain.com
NEXTAUTH_SECRET=your_production_nextauth_secret_min_32_chars
NEXTAUTH_URL=https://mazaochain.com

# Email Configuration (Production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
FROM_EMAIL=noreply@mazaochain.com

# SMS Configuration (Production)
TWILIO_ACCOUNT_SID=your_production_twilio_account_sid
TWILIO_AUTH_TOKEN=your_production_twilio_auth_token
TWILIO_PHONE_NUMBER=your_production_twilio_phone_number

# Security Configuration
NODE_ENV=production
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
CORS_ORIGIN=https://mazaochain.com

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true
SENTRY_DSN=your_sentry_dsn_for_error_tracking
DATADOG_API_KEY=your_datadog_api_key

# Database Configuration
DATABASE_URL=your_production_database_url
REDIS_URL=your_production_redis_url

# Contract Addresses (Mainnet)
MAZAO_TOKEN_FACTORY_CONTRACT=0.0.CONTRACT_ID
LOAN_MANAGER_CONTRACT=0.0.CONTRACT_ID

# Feature Flags
ENABLE_MAINTENANCE_MODE=false
ENABLE_NEW_USER_REGISTRATION=true
ENABLE_LOAN_CREATION=true